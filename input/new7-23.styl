                background url('../img/74c5a73ef68740a774dbeb5af1cc258f-10+17.png') right center / 10px auto no-repeat

.new-7-23-course-details
    .video-container
        position relative

        img
            display block
            width 100%

        .back
            position absolute
            top 15px
            left 15px
            width 46px

            img
                display block
                width 100%

    .tabs-control
        position absolute
        left 0
        right 0
        top 0
        display flex
        background #ffffff
        &.active
            position fixed


        .item
            position relative
            flex 1
            border-bottom 3px solid #f7f7f8
            color #000000
            text-align center
            font-size 24px
            line-height 80px

            &:after
                position absolute
                right 0
                bottom -1px
                left 0
                height 5Px
                background transparent
                content ''
                transition 0.3s

            &:hover, &.active
                &:after
                    background #ffc636

            span
                color #909090
                font-size 20px

