    .new-7-23-hot-course
        .none-line
            height 14px
            border-top 1px solid #e4e4e4
            border-bottom 1px solid #e4e4e4
            background #f7f7f8

        h3
            position relative
            margin 25px 0 5px
            text-align center

            &:after
                position absolute
                top 50%
                right 20%
                left 20%
                margin-top -1px
                border-top 3px solid #f5c22d
                content ''

            span
                position relative
                z-index 1
                padding 0 20px
                background #ffffff
                color #000000
                font-size 36px
                line-height 46px

        .list
            padding 0 30px

            .item
                display flex
                justify-content space-between
                margin-top 50px

                .left-container
                    position relative
                    flex 0 0 310px
                    width 310px

                    .label
                        position absolute
                        right 15px
                        bottom 15px
                        padding 5px 10px
                        border-radius 5px
                        background #f5c22d
                        color #ffffff
                        font-size 18px

                    img
                        display block
                        width 100%
                        height 100%
                        border-radius 5px

                .right-container
                    display flex
                    flex 0 0 345px
                    flex-direction column
                    justify-content space-between

                    h4
                        color #4a4a4a
                        font-size 30px
                        line-height 40px

                    .two-cloumns
                        display flex
                        justify-content space-between
                        padding-top 10px

                    .rota-us
                        display flex

                        span
                            width 25px
                            height 22px
                            background url('../img/4472bb863279c766623109df8849e129-25+22.png') center center / 100% 100% no-repeat

                            &.half
                                background-image url('../img/b51d2525be8324a0464fa6234025108e-25+22.png')

                            &.none
                                background-image url('../img/8e40e5728d77157d28a19ac9e2e9ff0c-24+22.png')

                    .count
                        color #9a9a9a
                        font-size 20px
                        line-height 22px

                        span
                            color #4a4a4a

                    p
                        color #4a4a4a
                        font-size 24px
                        line-height 34px

        .load-more
